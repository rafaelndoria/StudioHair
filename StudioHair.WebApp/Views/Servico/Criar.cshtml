@model CadastroServicoInputModel
@{
    ViewData["Title"] = "Cadastro de Serviço";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form id="formCadastro" asp-controller="Servico" asp-action="Criar" method="post">
                        <div class="form-group">
                            <label asp-for="Nome" class="form-label">Nome</label>
                            <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="DuracaoMinutos" class="form-label">Duração em Minutos</label>
                            <input asp-for="DuracaoMinutos" type="number" class="form-control" placeholder="Digite a duração em minutos">
                            <span asp-validation-for="DuracaoMinutos" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="ValorServico" class="form-label">Valor do Serviço</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="ValorServico" type="text" class="form-control" placeholder="Digite o valor do serviço">
                                <span asp-validation-for="ValorServico" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-success">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var valorServicoInput = document.querySelector("input[name='ValorServico']");

        valorServicoInput.addEventListener("input", function () {
            var value = this.value.replace(/\D/g, "");
            value = value.replace(/(\d)(\d{2})$/, "$1,$2");
            this.value = value;
        });
    });
</script>