@model ServicoViewModel
@{
    ViewData["Title"] = "Configuração de Serviço";
}
@if (TempData["Sucesso"] != null)
{
    <div id="mensagem-sucesso" class="alert alert-success" role="alert">
        @TempData["Sucesso"]
    </div>
}
@if (TempData["Erro"] != null)
{
    <div id="mensagem-erro" class="alert alert-danger" role="alert">
        @TempData["Erro"]
    </div>
}
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger" role="alert">
        Ocorreram erros ao processar o formulário:
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container mt-5">
    <h2>Detalhes do Serviço</h2>
    <div>
        <div class="form-group">
            <label>Código</label>
            <input type="text" class="form-control" id="codigo" value="@Model.Id" disabled>
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input type="text" class="form-control" id="nome" value="@Model.Nome" disabled>
        </div>
        <div class="form-group">
            <label>Duração em Minutos</label>
            <input type="text" class="form-control" id="duracao" value="@Model.DuracaoEmMinutos" disabled>
        </div>
        <div class="form-group">
            <label>Valor do Serviço</label>
            <input type="text" class="form-control" id="valorServico" value="@Model.ValorSevico" disabled>
        </div>
        <div class="mt-3">
            <a asp-controller="Servico" asp-action="List" type="button" class="btn btn-danger">Voltar</a>
            <a asp-controller="Servico" asp-action="Atualizar" asp-route-id="@Model.Id" type="button" class="btn btn-primary">Atualizar</a>
        </div>
    </div>
</div>
