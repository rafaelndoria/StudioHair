@model ClienteViewModel
@{
    ViewData["Title"] = "Configuração de Cliente";
}

<div class="container mt-5">
    <h2>Detalhes do Cliente</h2>
    <div>
        <div class="form-group">
            <label>Código</label>
            <input type="text" class="form-control" id="codigo" value="@Model.Codigo" disabled>
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input type="text" class="form-control" id="nome" value="@Model.Nome" disabled>
        </div>
        <div class="form-group">
            <label>CPF</label>
            <input type="text" class="form-control" id="cpf" value="@Model.Cpf" disabled>
        </div>
        <div class="form-group">
            <label>Data de Nascimento</label>
            <input type="text" class="form-control" id="dataNascimento" value="@Model.DataDeNascimento" disabled>
        </div>
        <div class="form-group row">
            <div class="col">
                <label>CEP</label>
                <input type="text" class="form-control" id="cep" value="@Model.Cep" disabled>
            </div>
            <div class="col">
                <label>Rua</label>
                <input type="text" class="form-control" id="rua" value="@Model.Rua" disabled>
            </div>
            <div class="col">
                <label>Número</label>
                <input type="text" class="form-control" id="numero" value="@Model.Numero" disabled>
            </div>
            <div class="col">
                <label>Bairro</label>
                <input type="text" class="form-control" id="bairro" value="@Model.Bairro" disabled>
            </div>
            <div class="col">
                <label>Cidade</label>
                <input type="text" class="form-control" id="cidade" value="@Model.Cidade" disabled>
            </div>
        </div>
        <form asp-controller="Cliente" asp-action="@((Model.Ativo) ? "Inativar" : "Ativar")" asp-route-id="@Model.Codigo" method="post">
            <div class="form-group">
                <label>Ativo</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="ativo" value="@((Model.Ativo) ? "Ativo" : "Inativo")" disabled>
                    <div class="input-group-append">
                        @if (Model.Ativo)
                        {
                            <button type="submit" class="btn btn-danger">Inativar</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success">Ativar</button>
                        }
                    </div>
                </div>
            </div>
        </form>
        <div class="form-group">
            <label>Usuario Vinculado</label>
            <input type="text" class="form-control" id="usuario-vinculado" value="@(!string.IsNullOrEmpty(Model.NomeUsuarioVinculado) ? Model.NomeUsuarioVinculado : "Sem usuario vinculado")" disabled>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" id="email" value="@Model.Email" disabled>
        </div>
        <div class="form-group">
            <label>Telefone</label>
            <input type="text" class="form-control" id="telefone" value="@Model.TelefoneCelular" disabled>
        </div>
        <div class="form-group">
            <label>WhatsApp</label>
            <input type="text" class="form-control" id="whatsapp" value="@Model.Whatsapp" disabled>
        </div>
        <div class="form-group">
            <label>Facebook</label>
            <input type="text" class="form-control" id="facebook" value="@Model.Facebook" disabled>
        </div>
        <div class="form-group">
            <label>Frequência no Salão</label>
            <input type="text" class="form-control" id="frequencia" value="@Model.Frequencia" disabled>
        </div>
        <div class="form-group">
            <label>Observação</label>
            <input type="text" class="form-control" id="observacao" value="@Model.Observacao" disabled>
        </div>
        <div class="form-group">
            <label>Data de Cadastro:</label>
            <input type="text" class="form-control" id="dataCadastro" value="@Model.DataCadastro" disabled>
        </div>
        <a asp-controller="Cliente" asp-action="List" type="button" class="btn btn-danger mt-2" id="atualizarBtn">Voltar</a>
        <a asp-action="Atualizar" asp-controller="Cliente" asp-route-id="@Model.Codigo" type="button" class="btn btn-primary mt-2" id="atualizarBtn">Atualizar</a>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#cancelarBtn").click(function () {
            $("input").prop('disabled', true);
            $("select").prop('disabled', true);
            $("#salvarBtn").addClass('d-none');
            $("#cancelarBtn").addClass('d-none');
            $("#atualizarBtn").removeClass('d-none');
        });
    });
</script>