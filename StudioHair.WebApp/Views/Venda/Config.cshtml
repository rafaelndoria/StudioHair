@model DetalhesVendaViewModel
@{
    ViewData["Title"] = "Detalhes da Venda";
}

@if (TempData["Sucesso"] != null)
{
    <div id="mensagem-sucesso" class="alert alert-success" role="alert">
        @TempData["Sucesso"]
    </div>
}
@if (TempData["Erro"] != null)
{
    <div id="mensagem-erro" class="alert alert-danger" role="alert">
        @TempData["Erro"]
    </div>
}
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger" role="alert">
        Ocorreram erros ao processar o formulário:
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container mt-5">
    <h2>Detalhes da Venda</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Código</label>
                <input type="text" class="form-control" id="id" value="@Model.Id" disabled>
            </div>
            <div class="form-group">
                <label>Nome do Cliente</label>
                <input type="text" class="form-control" id="nomeCliente" value="@Model.NomeCliente" disabled>
            </div>
            <div class="form-group">
                <label>Data da Venda</label>
                <input type="text" class="form-control" id="dataVenda" value="@Model.DataVenda.ToShortDateString()" disabled>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Tipo de Pagamento</label>
                <input type="text" class="form-control" id="tipoPagamento" value="@Model.TipoPagamento" disabled>
            </div>
            <div class="form-group">
                <label>Valor Desconto</label>
                <input type="text" class="form-control" id="valorDesconto" value="@Model.ValorDesconto.ToString("C")" disabled>
            </div>
            <div class="form-group">
                <label>Valor Total</label>
                <input type="text" class="form-control" id="valorTotal" value="@Model.Total.ToString("C")" disabled>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <h4>Produtos da Venda</h4>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Valor Unitário</th>
                        <th>Quantidade</th>
                        <th>Valor Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model.ProdutosVenda)
                    {
                        <tr>
                            <td>@produto.Nome</td>
                            <td>@produto.ValorUnitario.ToString("C")</td>
                            <td>@produto.Quantidade</td>
                            <td>@produto.ValorTotal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>