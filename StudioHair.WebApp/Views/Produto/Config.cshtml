@model ProdutoConfigViewModel
@{
    ViewData["Title"] = "Configuração de Produto";
}

<div class="container mt-5">
    <h2>Detalhes do Produto</h2>
    <div>
        <div class="form-group">
            <label>Código</label>
            <input type="text" class="form-control" id="codigo" value="@Model.Codigo" disabled>
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input type="text" class="form-control" id="nome" value="@Model.Nome" disabled>
        </div>
        <div class="form-group">
            <label>Marca</label>
            <input type="text" class="form-control" id="marca" value="@Model.Marca" disabled>
        </div>
        <div class="form-group">
            <label>Código de Barras</label>
            <input type="text" class="form-control" id="codigoBarras" value="@Model.CodigoDeBarras" disabled>
        </div>
        <div class="form-group">
            <label>Valor de Venda</label>
            <input type="text" class="form-control" id="valorVenda" value="@Model.ValorVendas" disabled>
        </div>
        <div class="form-check mt-3">
            <input type="checkbox" class="form-check-input" id="produtoParaVenda" @(Model.ProdutoVendas ? "checked" : "") disabled>
            <label class="form-check-label" for="produtoParaVenda">Produto para venda</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="controlaEstoque" @(Model.ControlaEstoque ? "checked" : "") disabled>
            <label class="form-check-label" for="controlaEstoque">Controla Estoque</label>
        </div>
        <a asp-controller="Produto" asp-action="AtualizarUnidade" asp-route-id="@Model.Codigo" class="btn btn-primary mt-3">Unidade</a>
        <a asp-controller="Produto" asp-action="AtualizarImagem" asp-route-id="@Model.Codigo" class="btn btn-primary mt-3">Imagem</a>
        <div class="mt-3">
            <a asp-controller="Produto" asp-action="List" type="button" class="btn btn-danger">Voltar</a>
            <a asp-controller="Produto" asp-action="Atualizar" asp-route-id="@Model.Codigo" type="button" class="btn btn-primary">Atualizar</a>
        </div>
    </div>
</div>